col-light = #fff
col-light-mid = #eee
col-mid = #ccc
col-mid-dark = #888
col-dark = #444
col-primary = #c44
col-primary-focus = #e66

*
  box-sizing: border-box

:root
  font-family: "Source Code Pro", monospace
  font-size: 16px
  background: col-dark url("../assets/simple-bg.png")
  color: col-dark

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

a
  color: col-primary
  text-decoration: none
  
  &:hover
    color: col-primary-focus

table
  width: 100%
  border-collapse: collapse
  
  td
  th
    border: 1px solid col-dark
  
#app
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  margin: 0 auto
  background: col-light

#app > header
#app > footer
  flex: 0 0 auto
  padding: 1em
  background: col-primary
  color: col-light
  
  h1
    margin: 0
    padding: 0

#app > main
  flex: 1 1 auto
  padding: 1em
  background: col-light

  .button
    min-width: 16em
    padding: 1em 2em
    background: col-light-mid
  
  .bold
    font-weight: bold
